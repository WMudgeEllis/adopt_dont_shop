<% @pets.each do |pet| %>

  <% if @app.find_pet_app(pet.id).status == nil %>

    <%= form_with url: "/applications/#{@app.id}/pets/#{pet.id}?approve=true", method: :patch, local: true do |f|%>
      <%= f.submit "Approve #{pet.name}" %>
    <% end %>

    <%= form_with url: "/applications/#{@app.id}/pets/#{pet.id}?reject=true", method: :patch, local: true do |f|  %>
      <%= f.submit "Reject #{pet.name}" %>
    <% end %>
  <% elsif @app.find_pet_app(pet.id).status != nil %>
    <%= "#{pet.name} is #{@pet_app.status}" %>
  <% end %>


<% end %>
